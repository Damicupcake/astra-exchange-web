{
	"database": {
		"rules": "database.rules.json"
	},
	"functions": {
		"predeploy": [
			"npm --prefix \"$RESOURCE_DIR\" run lint"
		]
	},
	"hosting": {
		"public": "public",
		"ignore": [
			"firebase.json",
			"**/.*",
			"**/node_modules/**"
		],
		"rewrites": [
			{
				"source": "/dashboard",
				"destination": "/dashboard.html"
			},
			{
				"source": "/send",
				"destination": "/send.html"
			},
			{
				"source": "/invoice",
				"destination": "/invoice.html"
			},
			{
				"source": "/transactions",
				"destination": "/transactions.html"
			},
			{
				"source": "/invoices",
				"destination": "/invoices.html"
			},
			{
				"source": "/settings",
				"destination": "/settings.html"
			},
			{
				"source": "**",
				"destination": "/index.html"
			}
		],
		"redirects": [
			{
				"source": "/notes",
				"destination": "https://notes.astra.exchange"
			}
		]
	},
	"storage": {
		"rules": "storage.rules"
	}
}