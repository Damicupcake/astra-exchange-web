{
	"database": {
		"rules": "database.rules.json"
	},
	"functions": {
		"predeploy": [
			"npm --prefix \"$RESOURCE_DIR\" run lint"
		]
	},
	"hosting": {
		"public": "public",
		"ignore": [
			"firebase.json",
			"**/.*",
			"**/node_modules/**"
		],
		"redirects": [
			{
				"source": "**",
				"destination": "/index.html"
			},
			{
				"source": "/dashboard",
				"destination": "/dashboard.html"
			}
		]
	},
	"storage": {
		"rules": "storage.rules"
	}
}